@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4 style="color: red; text-align: center; font-size: 20px; margin-bottom: 20px;">@ViewBag.Thongbao</h4>

<table>
    <h2 style="text-align:center; font-size:15px;">ĐĂNG NHẬP</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                <span>@ViewData["Loi1"]</span>
            </td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                <span>@ViewData["Loi2"]</span>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
    }
</table>


<style>
    table {
        margin: 0 auto;
        border-collapse: collapse;
        width: 80%;
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
    }

    h2 {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
    }

    td {
        padding: 10px;
        vertical-align: middle;
        font-size: 16px;
        color: #333;
        width: 50%;
    }

    td:first-child {
        text-align: right;
        font-weight: bold;
        width: 30%;
    }

    td:last-child {
        text-align: left;
    }

    input[type="text"], input[type="password"], input[type="date"] {
        width: 100%;
        box-sizing: border-box;
        padding: 8px;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #45a049;
    }

    span {
        color: red;
        font-size: 14px;
        margin-left: 10px;
        display: inline-block;
        white-space: nowrap;
    }
</style>
